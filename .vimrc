language C
syntax on
set number
set hidden
set cursorline
" set cursorcolumn
set cmdheight=2
set showmatch
set backspace=indent,eol,start
set smartcase
set autoindent
set expandtab
set tabstop=2
set shiftwidth=2
set softtabstop=2
set foldmethod=marker
set noswapfile
set shortmess+=A
inoremap " ""<LEFT>
inoremap ' ''<LEFT>
nnoremap <silent>bp :bprevious<CR>
nnoremap <silent>bn :bnext<CR>
nnoremap <silent>bb :b#<CR>
" WANTED SMART SOLUTION...
nnoremap <silent>b1 :b1<CR>
nnoremap <silent>b2 :b2<CR>
nnoremap <silent>b3 :b3<CR>
nnoremap <silent>b4 :b4<CR>
nnoremap <silent>b5 :b5<CR>
nnoremap <silent>b6 :b6<CR>
nnoremap <silent>b7 :b7<CR>
nnoremap <silent>b8 :b8<CR>
nnoremap <silent>b9 :b9<CR>

